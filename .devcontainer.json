{
  "name": "ROS Environment",
  "build": {
      "dockerfile": "Containerfile",
      "target": "dev",
      "context": ".",
      "args": {
          "ROS_DISTRO": "kilted"
      }
  },
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "mounts": [],
  "runArgs": [
      "--net=host",
      "--env-file",
        "${localWorkspaceFolder}/.env" // Adjust path as needed
  ],
  "containerEnv": {
      "SHELL": "/bin/bash"
  }
}